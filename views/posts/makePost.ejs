<%- include('../partials/header', {title:"Make Post"}) -%>

<div class="container-fluid">
  <h2>Create a Post</h2>

  <form action="/posts/makePost" method="POST">
    <label for="Pseudonym">Pseudonym:</label><br>
    <select name="Pseudonym" id="Pseudonym" required>
      <option disabled selected value> - Choose a Pseudonym - </option>
      <% for (pseudonym of Object.values(pseudonyms)){%>
      <option value="<%=pseudonym.Pseudonym%>"><%=pseudonym.Pseudonym%></option>
      <%}%></select><br><br>
        <label for="Title">Title:</label><br>
        <input type="text" id="Title" name="Title" required><br><br>
        <label for="Text">Post Text:</label><br>
        <textarea id="Text" name="Text" rows="6" cols="120" required></textarea><br>
        <br>
        <input type="submit" value="Publish">

    </form>

<%- include('../partials/footer') -%>
